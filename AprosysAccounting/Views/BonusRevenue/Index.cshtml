<link href="~/Theme/css/plugins/jQueryUI/jquery-ui-1.10.4.custom.min.css" rel="stylesheet">
<link href="~/Theme/css/plugins/jqGrid/ui.jqgrid.css" rel="stylesheet">
<link href="~/Theme/css/plugins/toastr/toastr.min.css" rel="stylesheet" />
<link href="~/css/custom/SharedStyles.css" rel="stylesheet" />


<div class="container" style="margin-top:20px">
    <h2>Bonus Revenue</h2>
    <div style="margin-top:80px">
        <div class="row">
            <div class="col-sm-3">
                <label>Date Start</label>
                <div class="input-group date" data-provide="datepicker">
                    <input type="text" id="dtp_evenue_account_MainStartDate" class="form-control" readonly>
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-th"></span>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <label>Date End</label>
                <div class="input-group date" data-provide="datepicker">
                    <input type="text" id="dtp_revenue_account_MainEndDate" class="form-control " readonly>
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-th"></span>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <br>
                <input type="button" class="btn btn-success" id="btn_bonusrevenue_Search" value="Search" />
            </div>
        </div><div class="row">
            <div class="col-sm-3" style="float:right">
                <input type="button" class="btn btn-success" id="btn_AddNewBonusRevenue" value="Add New Bonus" style="float:right" />
            </div>
        </div>

        <br />
        <table id="tblBonusRevenueInformation" class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th class="text-center success">Date</th>
                    <th class="text-center success">Bonus Amount</th>
                    <th class="text-center success">Revenue Account</th>
                    <th class="text-center success">Bank Account</th>
                    <th class="text-center success">Action</th>
                </tr>
            </thead>
            <tbody class="tblBonusRevenue"></tbody>

        </table>
    </div>
</div>
<div class="modal fade" id="NewBonusRevenueModal" tabindex="-1" role="basic" aria-hidden="true" style="display:none;">
    <div class="modal-dialog NewBonusRevenueModal" style="width: 35%; margin-left: 32%;margin-top: 10%; ">
        <div class="modal-content col-xs-12">
            <div class="modal-header">
                @*<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>*@
                <h4 class="modal-title" id="title_bonus_revenue">Add New Bonus Revenue</h4>
            </div>
            <div class="modal-body ">
                <div class="row">
                    <div class="col-sm-6">
                        <label>Date</label>
                        <div class="input-group datetimepker">
                            <input type="text" class="form-control datetimepker linkToDatePermission" id="dtp_RevenueAccount_Date">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-th"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <label>Amount</label>
                        <div class="currencyInputWrap">
                            <input type="text" class="form-control CurrencyFormattingwithouminus StopPasting" id="txt_bonus_amount" maxlength="8" />
                        </div>
                    </div>
                </div>
                <div class="row">


                    <div class="col-sm-6">
                        <label>Revenue Account</label>
                        <select class="form-control dd_revenue_account" id="dd_revenue_account">
                            <option value="0" selected></option>

                        </select>
                    </div>
                    <div class="col-sm-6">
                        <label>Bank</label>
                        <select class="form-control dd_bonus_revenue_bank" id="dd_bonus_revenue_bank">
                            <option value="0" selected></option>

                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <label>Comments</label>
                        <input type="text" class="form-control" id="txt_bonus_revenue_Misc" maxlength="250" />
                    </div>
                </div>
                <br />
                <div class="modal-footer">
                    <input type="button" class="btn btn-success" id="btnSaveBonusRevenue" value="Save" />
                    <a href="#" class="btn btn-default" data-dismiss="modal">Close</a>
                </div>
            </div>

        </div>
    </div>

    <script src="~/Theme/js/plugins/jqGrid/i18n/grid.locale-en.js"></script>
    <script src="~/Theme/js/plugins/jqGrid/jquery.jqGrid.min.js"></script>
    <script src="~/Scripts/custom/helper.js"></script>
    <script src="~/Theme/js/plugins/typehead/bootstrap3-typeahead.min.js"></script>
    <script src="~/Theme/js/jquery.inputpicker.js"></script>
    <script src="~/Theme/js/plugins/toastr/toastr.min.js"></script>
    <script src="~/Scripts/custom/BonusRevenue.js"></script>
    <script src="~/Scripts/custom/GenericLib.js"></script>
