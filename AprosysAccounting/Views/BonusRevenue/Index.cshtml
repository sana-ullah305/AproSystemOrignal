        $(document).ready(function () {
            //$("#dtp_sell_ActivityDate").val(moment(result.activitydate).format('YYYY-MM-DD'));
            //$('#dtp_sell_ActivityDate').val(FormatDateTimeToDisplay(new Date()));
            BonusRevenueInformationTrigger();
        });
    </script>
