
@{
    ViewBag.Title = "Index";
}

<link href="~/Theme/css/plugins/jQueryUI/jquery-ui-1.10.4.custom.min.css" rel="stylesheet">
<link href="~/Theme/css/plugins/jqGrid/ui.jqgrid.css" rel="stylesheet">
<link href="~/Theme/css/plugins/toastr/toastr.min.css" rel="stylesheet" />
<link href="~/css/custom/SharedStyles.css" rel="stylesheet" />

<div class="container" style="margin-top:20px">


    <div style="margin-top:80px">

        <div class="row">
            <div class="col-sm-3">
                <label>Invoice #</label>
                <input type="number" class="form-control" value="10102222" readonly />
            </div>
            <div class="col-sm-3">
                <label>Date</label>
                <div class="input-group date" data-provide="datepicker">
                    <input type="text" class="form-control" readonly>
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-th"></span>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <label>Customer</label>
                <select class="form-control">
                    <option value="0" disabled>--Select--</option>
                    <option value="1">Customer 1</option>
                    <option value="2">Customer 2</option>
                    <option value="3">Customer 3</option>
                    <option value="4">Customer 4</option>
                </select>
            </div>
        </div>
        <br /> <br />
        <div class="row">
            <div class="col-sm-2">
                <label>Code</label>
                <input type="text" class="form-control code" />
            </div>
            <div class="col-sm-2">
                <label>Item</label>
                <select class="form-control item">
                    <option value="0"></option>

                </select>
            </div>
            <div class="col-sm-2">
                <label>Unit</label>
                <input type="text" class="form-control unit" readonly />
            </div>
            <div class="col-sm-2">
                <label>Qty</label>
                <input type="text" class="form-control qty" />
            </div>
            <div class="col-sm-2">
                <label>Unit Price</label>
                <input type="text" class="form-control price" />
            </div>
            <div class="col-sm-2">
                <label>Tax</label>
                <input type="text" class="form-control Tax" />
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                <label>Amount</label>
                <input type="text" class="form-control Amount" readonly />
            </div>
        </div>

        <br />
        <div class="row">
            <div class="col-sm-3" style="text-align:right;float:right">
                <input type="button" class="btn btn-success AddSales" value="Add New" />
            </div>
        </div>

        <br /><br />
        <table id="tblSalescurrentInformation" class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th class="text-center success">Code</th>
                    <th class="text-center success">Item</th>
                    <th class="text-center success">Unit</th>
                    <th class="text-center success">Qty</th>
                    <th class="text-center success">Price</th>
                    <th class="text-center success">Tax</th>
                    <th class="text-center success">Amount</th>
                    <th class="text-center success">Action</th>
                </tr>
            </thead>
            <tbody class="tblCurrentSales"></tbody>

        </table>

        <br />

        <div class="row">
            <div class="col-sm-2">
                <label> Comments : </label>
            </div>
            <div class="col-sm-10">
                <input type="text" class="form-control" />
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-sm-2">
                <label>Net Amount</label>
            </div>
            <div class="col-sm-2">
                <input type="text" class="form-control NetAmount" />
            </div>
            <div class="col-sm-1">
                <label>Paid</label>
            </div>
            <div class="col-sm-2">
                <input type="text" class="form-control paid" />
            </div>
            <div class="col-sm-1">
                <label>Balance</label>
            </div>
            <div class="col-sm-2">
                <input type="text" class="form-control balance" readonly />
            </div>
        </div>

        <br />
        <br />

        <div class="row">
            <div class="col-sm-3" style="float:right">
                <input type="button" class="btn btn-success save" value="Save Sale" />
            </div>
        </div>

        <br />

     
   
    
     </div>




</div>

<script src="~/Theme/js/plugins/jqGrid/i18n/grid.locale-en.js"></script>
<script src="~/Theme/js/plugins/jqGrid/jquery.jqGrid.min.js"></script>
<script src="~/Scripts/custom/helper.js"></script>
<script src="~/Theme/js/plugins/typehead/bootstrap3-typeahead.min.js"></script>
<script src="~/Theme/js/jquery.inputpicker.js"></script>
<script src="~/Theme/js/plugins/toastr/toastr.min.js"></script>
<script src="~/Scripts/custom/SalesManagment.js"></script>

<script type="text/javascript">

    $(document).ready(function () {
        SalesManagment();
    });




</script>


