
@{
    ViewBag.Title = "Index";
}

<link href="~/Theme/css/plugins/jQueryUI/jquery-ui-1.10.4.custom.min.css" rel="stylesheet">
<link href="~/Theme/css/plugins/jqGrid/ui.jqgrid.css" rel="stylesheet">
<link href="~/Theme/css/plugins/toastr/toastr.min.css" rel="stylesheet" />
<link href="~/css/custom/SharedStyles.css" rel="stylesheet" />

<div class="container" style="margin-top:20px">


    <div style="margin-top:80px">
        <div class="row">
            <div class="col-sm-3">
                <label>Date Start</label>
                <div class="input-group date" data-provide="datepicker">
                    <input type="text" class="form-control" id="dtp_purchase_MainStartDate" readonly>
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-th"></span>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <label>Date End</label>
                <div class="input-group date" data-provide="datepicker">
                    <input type="text" class="form-control" id="dtp_purchase_MainEndDate" readonly>
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-th"></span>
                    </div>
                </div>
            </div>
            <div class="col-sm-3" hidden>
                <label>Vender</label>
                <select class="form-control ddl_purchase_MainVendor" id="ddl_purchase_MainVendor">
                    <option value="0" disabled>--Select--</option>
                   
                </select>
            </div>
            <div class="col-sm-3">
                <br>
                <input type="button" class="btn btn-success" id="btn_purchase_Search" value="Search" />
            </div>
        </div>
      

        <br />
        <div class="row">
            <div class="col-sm-3" style="float:right">
                <input type="button" class="btn btn-success" id="btn_purchase_AddNewPurchase" value="Add New Purchase" style="float:right"/>
            </div>
        </div>
        <br/>
        <table id="tblPurchaseInformation" class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th class="text-center success">Invoice</th>
                    <th class="text-center success">Date</th>
                    <th class="text-center success">Vendor</th>
                    <th class="text-center success">Amount</th>
                    <th class="text-center success">Paid</th>
                    <th class="text-center success">Balance</th>
                    <th class="text-center success">Action</th>
                </tr>
            </thead>
            <tbody class="tblactive">
            

            </tbody>

        </table>
    </div>




</div>

<div class="modal fade " id="AddNewPurchaseModal" tabindex="-1" role="basic" aria-hidden="true" style="display:none;">
    <div class="modal-dialog modal-lg AddNewPurchaseModal" style="width:1170px">
        <div class="modal-content col-xs-11">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                <h4 class="modal-title">Add New Purchase</h4>
            </div>
            <div class="modal-body ">
                <div class="row">
                    <div class="col-sm-3">
                        <label>Invoice #</label>
                        <input type="text" class="form-control" value="10102222" id="txt_purchase_InvoiceNo" readonly />
                    </div>
                    <div class="col-sm-3">
                        <label>Date</label>
                        @*<div class="input-group date" data-provide="datepicker">
                            <input type="text" class="form-control" id="dtp_purchase_ActivityDate" readonly>
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-th"></span>
                            </div>
                        </div>*@
                        @*<div class="col-sm-6">*@
                            <div class="input-group datetimepker">
                                <input type="text" class="form-control datetimepker linkToDatePermission" id="dtp_purchase_ActivityDate" readonly>
                                <div class="input-group-addon">
                                    <span class="glyphicon glyphicon-th"></span>
                                </div>
                            </div>
                        @*</div>*@
                    </div>
                    <div class="col-sm-3">
                        <label >Vendor</label>
                        <select id="dd_purchase_Vendor" class="form-control ddl_purchase_Vendor">
                            <option value="0" disabled>--Select--</option>
                           
                        </select>
                    </div>
                </div>
                <br /> <br />
                <div class="row">
                    <div class="col-sm-2">
                        <label>Code</label>
                        <input type="text" class="form-control code" id="txt_purchase_Code" maxlength="13"/>
                    </div>
                    <div class="col-sm-2">
                        <label>Item</label>
                        <select class="form-control item ddl_purchase_item item" id="txt_purchase_item">
                            <option value="0"></option>

                        </select>
                    </div>
                    <div class="col-sm-2">
                        <label>Unit</label>
                        
                            <input type="text" class="form-control unit" id="txt_purchase_Unit" readonly />
                        
                        </div>
                    <div class="col-sm-2">
                        <label>Qty</label>
                        <input type="number" min="0" class="form-control  StopPasting"  oninput="validity.valid||(value='');" id="txt_purchase_Qty" max="9999"/>
                    </div>
                    <div class="col-sm-2">
                        <label>Unit Price</label>
                        <div class="currencyInputWrap">
                            <input type="text" class="form-control CurrencyFormattingwithouminus StopPasting" id="txt_purchase_Unitprice" maxlength="9" />
                            </div>
                        </div>
                    <div class="col-sm-2">
                        <label>Amount</label>
                        <div class="currencyInputWrap">
                            <input type="text" class="form-control CurrencyFormatting StopPasting Amount" id="txt_purchase_Amount" readonly />
                            </div>
                        </div>
                </div>

                <br />
                <div class="row">
                    <div class="col-sm-3" style="text-align:right;float:right">
                        <input type="button" class="btn btn-success AddPurchase" value="Add" />
                    </div>
                </div>

                <br /><br />
                <table id="tblSalescurrentInformation" class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th class="text-center success">Code</th>
                            <th class="text-center success">Item</th>
                            <th class="text-center success">Unit</th>
                            <th class="text-center success">Qty</th>
                            <th class="text-center success">Price</th>
                            <th class="text-center success">Amount</th>
                            <th class="text-center success">Action</th>
                        </tr>
                    </thead>
                    <tbody class="tblCurrentPurchase"></tbody>

                </table>

                <br />

                <div class="row">
                    <div class="col-sm-1" style="text-align:right;padding:0px;">
                        <label> Comments : </label>
                    </div>
                    <div class="col-sm-11">
                        <input type="text" class="form-control" id="txt_purchase_Comments" maxlength="250" />
                    </div>
                </div>
                <br />

                <div class="row">
                    <div class="col-sm-1" style="text-align:right;padding:0px;">
                        <label>Net Amount</label>
                    </div>
                    <div class="col-sm-2">
                        <div class="currencyInputWrap">
                            <input type="text" class="form-control CurrencyFormatting StopPasting" id="txt_purchase_NetAmount" readonly />
                            </div>
                        </div>
                    <div class="col-sm-1" style="text-align:right;padding:0px;">
                        <label>Paid</label>
                    </div>
                    <div class="col-sm-2">
                        <div class="currencyInputWrap">
                            <input type="text" class="form-control CurrencyFormattingwithouminus StopPasting paid" id="txt_purchase_PaidAmount" maxlength="13" />
                            </div>
                        </div>
                    <div class="col-sm-3"></div>
                    <div class="col-sm-1" style="text-align:right;padding:0px;">
                        <label>Balance</label>
                    </div>
                    <div class="col-sm-2">
                        <div class="currencyInputWrap">
                            <input type="text" class="form-control CurrencyFormatting StopPasting" id="txt_purchase_Balance" readonly />
                            </div>
                        </div>
                </div>


            </div>
            <div class="modal-footer">
                <input type="button" class="btn btn-success" value="Save" id="btn_purchase_Save"/>
                <a href="#" class="btn btn-default close" data-dismiss="modal">Close</a>
            </div>


        </div>

    </div>
</div>



