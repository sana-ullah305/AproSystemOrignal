
@{
    ViewBag.Title = "Index";
}

<link href="~/Theme/css/plugins/toastr/toastr.min.css" rel="stylesheet" />

<div class="container" style="margin-top:20px">
    <h2>Bank</h2>
    <div style="margin-top:80px">
        <div class="row">
            <div class="col-md-9"></div>
            <div class="col-md-3"><input class="btn btn-success" type="button" id="btn_add_newBankAccount" name="AddBankAccount" value="Add Bank Account" /></div>
        </div>
        <br />
        <table id="tblBankDetail" class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th class="text-center success">Account Name</th>
                    <th class="text-center success">Action</th>
                </tr>
            </thead>
            <tbody class="tblBankDetail_tblactive"></tbody>
        </table>
    </div>
</div>



<div class="modal fade" id="AddNewBankAccountModal" tabindex="-1" role="basic" aria-hidden="true" style="display:none;">
    <div class="modal-dialog modal-lg AddNewBankAccountModal" id="mdl_addNewBankAccount" style="width:500px">
        <div class="modal-content col-xs-11">
            <div class="modal-header h5" id="div_Bank_AddNewBank">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                <h4 class="modal-title">Add New Bank Account</h4>
            </div>
            <div class="modal-body ">
                @*<div class="row">
                    <div class="col-sm-4"><label>Bank Name</label></div>
                    <div class="col-sm-8"><input type="text" class="form-control" id="txt_mdlbank_name" maxlength="50" /></div>

                </div>

                <br />*@
                <div class="row">
                    <div class="col-sm-5"><label>Account No.</label></div>
                    <div class="col-sm-7"><input type="text" class="form-control" id="txt_mdlaccount_no" maxlength="50" /></div>
                </div>
                <br />
                <div class="row hidden">
                    <div class="col-sm-5"><label>Opening Balance</label></div>
                    <div class="col-sm-7"><div class="currencyInputWrap"><input type="text" class="form-control CurrencyFormattingwithouminus StopPasting hidden" id="txt_mdlaccount_deposit" maxlength="10" /></div>  </div>

                </div>

                <br />
                <div class="modal-footer">
                    <input type="button" class="btn btn-success" id="btn_bank_SaveAccount" value="Save" />
                    <a href="#" class="btn btn-default" data-dismiss="modal" id="btn_bank_closeBank">Close</a>
                </div>
            </div>

        </div>
    </div>
</div>





<div id="EditAccountModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Rename Account</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-4">
                        <input type="text" class="txtAccountName form-control" rel="" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btnRenameBank">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<script src="~/Scripts/custom/BanksConfiguration.js"></script>

<script src="~/Scripts/custom/helper.js"></script>
